@page
@model BlueNestKaraoke.Pages.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4">
        <div class="login-form">
            <h2 class="text-center">Login to Blue Nest Karaoke</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="PhoneNumber">Phone Number</label>
                    <div class="input-with-icon">
                        <input asp-for="Input.PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Enter your phone number" />
                        <span class="icon"><i class="fas fa-phone"></i></span>
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <div class="input-with-icon">
                        <input asp-for="Input.Password" class="form-control" id="Password" placeholder="Enter your password" />
                        <span class="icon"><i class="fas fa-lock"></i></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                </div>
                <button type="submit" class="btn-primary btn-block">Log in</button>
                <div class="form-group">
                    <a href="/Account/ForgotPassword">Forgot Password?</a>
                </div>
            </form>
            <p class="text-center">
                Don't have an account? <a href="/Account/Register">Sign up</a>
            </p>
        </div>
    </div>
</div>